<div class="col-md-3">
  <div class="card-pf card-pf-accented card-pf-aggregate-status card-pf-with-action">
    <h2 class="card-pf-title">
      <a href="#salt_keys" onclick="$('#salt_keys-filter').val('').trigger('change')">
          <%= icon_text('lock', '', :kind => 'fa') %><span class="card-pf-aggregate-status-count"><%= keys.values.inject(&:+)  %></span> <%= _("Keys") %>
      </a>
    </h2>
    <div class="card-pf-body">
      <p class="card-pf-aggregate-status-notifications">
      <% ::ForemanSalt::SaltKeysHelper::STATES.each do |state| %>
        <span class="card-pf-aggregate-status-notification">
            <a href="#salt_keys" title="<%= _(state) %>" onclick="$('#salt_keys-filter').val('<%= _(state) %>').trigger('change')"><span class="<%= ::ForemanSalt::SaltKeysHelper::ICONS[state] %>"></span><%= keys[state] || 0 %></a>
        </span>
      <% end %>
      </p>
    </div>
  </div>
</div>
