<div class="fr filter">
  <%= _('Filter by state:') %> <%= salt_keys_state_filter %>
</div>

<table class="<%= table_css_classes 'table-fixed' %>" data-table="inline">
  <thead>
    <tr>
      <th><%= _('Key Name') %></th>
      <th><%= _('State') %></th>
      <th><%= _('Fingerprint') %></th>
      <th></th>
    </tr>
  </thead>
  <% keys.each do |key| %>
      <tr>
        <td><%= key.name %> </td>
        <td><%= _(key.state) %></td>
        <td><%= key.fingerprint %></td>
        <td>
          <%= action_buttons(
                  if key.state == 'unaccepted'
                      [display_link_if_authorized(_('Accept'), hash_for_smart_proxy_salt_key_accept_path.merge(:smart_proxy_id => @proxy, :state => params[:state], :salt_key_id => key)),
                       display_link_if_authorized(_('Reject'), hash_for_smart_proxy_salt_key_reject_path.merge(:smart_proxy_id => @proxy, :state => params[:state], :salt_key_id => key))]
                  end,
                  display_delete_if_authorized(hash_for_smart_proxy_salt_key_destroy_path(:smart_proxy_id => @proxy, :salt_key_id => key, :state => params[:state], :class => 'delete'))
                  )
          %>
        </td>
      </tr>
  <% end %>
</table>

<%= page_entries_info keys  %>
<%= will_paginate keys %>
